@model IEnumerable<Cet322FinalProject.Models.Category>

@{
    ViewData["Title"] = "Index";
}


<body style="overflow: visible;">
    <!--? Preloader Start -->
    <!-- Preloader Start -->

    <main>
        <!--? Categories Area Start -->
        <div class="categories-area" style="padding-top:40px">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Section Tittle -->
                        <div class="section-tittle text-center mb-80">
                            <h2>All Categories</h2>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @foreach (var itemPost in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="single-cat text-center mb-50">
                                <div class="cat-icon">
                                    <a class="btn-outline-dark" asp-action="Edit" asp-route-id="@itemPost.Id">Edit</a> <a>|</a>
                                    <a class="btn-outline-dark" asp-action="Delete" asp-route-id="@itemPost.Id">Delete</a>
                                    <span>

                                        <a ><div class="d-flex flex-column align-items-center justify-content-center"><img src="~/PostImages/star.jpg" alt="" style="width:100%"></div></a>
                                    </span>
                                </div>
                                <div class="cat-cap">

                                    <h4>@itemPost.Name</h4>
                                    <p><a class="btn-outline-dark" asp-controller="Categories" asp-action="Details" asp-route-id="@itemPost.Id">All Posts</a></p>

                                </div>
                            </div>
                        </div>
                    }



                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="single-cat text-center mb-50">
                            <div class="cat-icon">
                                <span>

                                    <a asp-controller="Categories" asp-action="Create"><div class="d-flex flex-column align-items-center justify-content-center"><img  src="~/img/plus.jpg" alt="" style="width:100%"></div></a>

                                </span>
                            </div>
                            <div class="cat-cap">

                                <a class="btn-outline-dark" asp-controller="Categories" asp-action="Create">Add New Category</a>

                                <p><a class="btn-outline-dark"></a></p>

                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </main>
</body>