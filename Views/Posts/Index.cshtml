@model IEnumerable<Cet322FinalProject.Models.Post>

@{
    ViewData["Title"] = "Index";
}



    <body style="overflow: visible;">
        <main>
            <div class="categories-area" style="padding-top:40px">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <!-- Section Tittle -->
                            <div class="section-tittle text-center mb-80">
                                <div class="comment-count"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        @foreach (var itePosts in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="single-cat text-center mb-50">
                                    <div class="cat-icon">
                                        <a class="btn-outline-dark" asp-controller="Posts" asp-action="Edit" asp-route-id="@itePosts.Id">Edit</a> <a>|</a>
                                        <a class="btn-outline-dark" asp-controller="Posts" asp-action="ManageImage" asp-route-id="@itePosts.Id">Manage Image</a> <a>|</a>
                                        <a class="btn-outline-dark" asp-controller="Posts" asp-action="Delete" asp-route-id="@itePosts.Id">Delete</a> 

                                        <span>
                                            @{
                                                var imageUrl = itePosts.PostImages?.FirstOrDefault()?.FileName ?? "noimage.jpg";
                                            }
                                            <div class="d-flex flex-column align-items-center justify-content-center"><a class="btn-outline-dark" asp-controller="Posts" asp-action="Details" asp-route-id="@itePosts.Id"><img src="~/PostImages/@imageUrl" alt="" width="330" height="220"></a></div>
                                        </span>
                                    </div>
                                    <div class="cat-cap">
                                        <h6>@itePosts.CreatedDate</h6>
                                        <h4>@itePosts.Title </h4>
                                        <h6>@itePosts.Description</h6>
                                        <p><i class="fa fa-comments"></i> @itePosts.Comments.Count Comments</p>


                                    </div>
                                </div>
                            </div>
                        }

                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="single-cat text-center mb-50">
                                <div class="cat-icon">
                                    <span>

                                        <a asp-controller="Posts" asp-action="Create"><div class="d-flex flex-column align-items-center justify-content-center" ><img src="~/img/plus.jpg" alt="" style="width:100%"></div></a>

                                    </span>
                                </div>

                                <div class="cat-cap">
                                    <a class="btn-outline-dark" asp-controller="Posts" asp-action="Create">Add New Post</a> 

                                    <p><a class="btn-outline-dark"></a></p>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </body>